<div class="main-content">

    <div class="blog-post">

        <!-- Title -->
        <h2 class="blog-post-title">
            <a href="<%- config.root %><%- page.path %>">
                <%- page.title || page.link%>
            </a>
        </h2>

        <!-- Date and Author -->
        <p class="blog-post-meta">
            <%= page.date.format(config.date_format) %>
            <% if(page.author) { %>
            by <%- page.author %>
            <% } %>
        </p>

        <!-- Content -->
        <%- page.content %>

    </div>

</div>


